<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_bottom_dialog_background"
    android:padding="20dp">

    <View
        android:id="@+id/view2"
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:background="@color/black_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Filters"
        android:textColor="@color/black_app"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/clearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Clear All"
        android:textColor="@color/blue1"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/buttonPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:text="Paid"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/buttonFailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Failed"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonPaid"
                app:layout_constraintTop_toTopOf="@+id/buttonPaid" />

            <TextView
                android:id="@+id/buttonPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Pending"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/buttonFailed"
                app:layout_constraintTop_toTopOf="@+id/buttonPaid" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Type"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonPaid" />


            <TextView
                android:id="@+id/buttonPaidType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="35dp"
                android:paddingVertical="6dp"
                android:text="Paid"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonReceived"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/buttonReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="25dp"
                android:paddingVertical="6dp"
                android:text="Received"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/buttonSelfTransfer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonPaidType"
                app:layout_constraintTop_toTopOf="@+id/buttonPaidType" />

            <TextView
                android:id="@+id/buttonSelfTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="Self Transfer"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonReceived"
                app:layout_constraintTop_toTopOf="@+id/buttonPaidType" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonPaidType" />


            <TextView
                android:id="@+id/button1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="+ â‚¹ 1000"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/button100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="+ â‚¹ 100"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/button500"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button1000"
                app:layout_constraintTop_toTopOf="@+id/button1000" />

            <TextView
                android:id="@+id/button500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="+ â‚¹ 500"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button100"
                app:layout_constraintTop_toTopOf="@+id/button1000" />

            <TextView
                android:id="@+id/button200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_button_color_change_2"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="15dp"
                android:paddingVertical="6dp"
                android:text="+ â‚¹ 200"
                android:textAllCaps="false"
                android:textColor="@color/black_app"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/button500"
                app:layout_constraintTop_toTopOf="@+id/button1000" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="@color/blue1"
        android:outlineSpotShadowColor="@color/blue1"
        app:cardBackgroundColor="@color/blue1"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:strokeColor="@color/blue1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#384AED"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_arrow_forward_24" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>